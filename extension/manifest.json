{
  "manifest_version": 3,
  "name": "QR to Text",
  "version": "1.0",
  "description": "Drag & Drop or Right Click to decode your QR code",
  "permissions": [
    "contextMenus",
    "clipboardRead"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
   "icons": {
   "16": "extension_icon16.png",
   "32": "extension_icon32.png",
   "48": "extension_icon48.png",
   "128": "extension_icon128.png"
 },
  "action": {
    "default_title": "Scan QR Code"
  }
}